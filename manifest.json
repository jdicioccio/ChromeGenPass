{
	"name": "__MSG_chrome_extension_name__",
	"version": "3.1",

	"description": "__MSG_chrome_extension_description__",
	"icons": {
		"16": "img/ktouch16.png",
		"48": "img/ktouch48.png",
		"128": "img/ktouch128.png"
	},

	"background_page": "background/background.html",
	"options_page": "options/options.html",
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["page/popup.js", "page/work.js", "page/events.js", "page/init.js"]
		}
	],
	"page_action": {
		"default_icon": "img/supergenpass.png",
		"default_title": "__MSG_chrome_extension_page_action_title__",
		"default_popup": "pageAction/pageAction.html"
	},
	"permissions": [
		"tabs", "http://*/*", "https://*/*"
	],
	
	"default_locale": "en"
	
}